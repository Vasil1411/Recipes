   <section class="form-container">
            <h2>Create Recipe</h2>
            <form method="post">
                <label for="title">Recipe Title:</label>
                <input type="text" id="title" name="title" {{#if data.title}}value="{{data.title}}"{{/if}}>

                <label for="description">Description:</label>
                <textarea id="description" name="description" {{#if data.description}}value="{{data.description}}"{{/if}}></textarea>

                <label for="ingredients">Ingredients:</label>
                <textarea id="ingredients" name="ingredients" {{#if data.ingredients}}value="{{data.ingredients}}"{{/if}}></textarea>

                <label for="instructions">Instructions:</label>
                <textarea id="instructions" name="instructions" {{#if data.instructions}}value="{{data.instructions}}"{{/if}}></textarea>

                <button type="submit">Create Recipe</button>
            </form>
        </section>
    