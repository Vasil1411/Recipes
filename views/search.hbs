
        <section class="search-container">
            <h2>Search Recipes</h2>
            <form action="/search" method="GET">
                <input type="text" id="search" name="title" placeholder="Search for recipes..." value="{{data.title}}">
                <button type="submit">Search</button>
            </form>
            {{#if recipes}}
            <div class="search-results">
                
                {{#each recipes}}
                {{> recipe}}
                {{/each}}
            </div>
            {{else}}
                <p class="no-match">There are no recipes found yet!</p>
            {{/if}}
        </section>
    
